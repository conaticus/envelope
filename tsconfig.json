{
  "compilerOptions": {
    "module": "ES2020",
    "declaration": true,
    "declarationDir": "./dist/",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build",
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "src/**/**.ts*",
  ],
  "exclude": [
    "build/",
    "node_modules/",
    "**/*.test.ts*"
  ]
}